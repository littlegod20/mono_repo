FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system nx_tutorial && \
          adduser --system -G nx_tutorial nx_tutorial

COPY dist/apps/nx_tutorial nx_tutorial/
